!!! 5
%html
  %head
    %title= yield_content :title
    %meta{ :"http-equiv" => "content-type", :content => "text/html; charset=UTF-8" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
    %link{ :href => "/js/vendor/jquery.fancybox-2.0.5.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }/
    %link{ :href => "/screen.css", :media => "screen, print", :rel => "stylesheet", :type => "text/css" }/
    %script{src: '/js/vendor/modernizr.custom-2.5.3.min.js', type: 'text/javascript'}
  %body
    #site
      %ol.nav
        %li
          %a{:href => '/about'} About
        %li
          %a{:href => '/tattoos'} Tattoos
        %li
          %a{:href => '/paintings'} Paintings
        %li
          %a{:href => '/news'} News
        %li
          %a{:href => '/contact'} Contact
      = haml :visual
      #page= yield
      #footer
        Copyright &copy; #{Time.now.year} by arnunestattoos.com
    - if Sinatra::Base.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-30749045-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    %script{src: '/js/vendor/jquery-1.7.2.min.js', type: 'text/javascript'}
    %script{src: '/js/vendor/jquery.fancybox-2.0.5.min.js', type: 'text/javascript'}
    %script{src: '/js/vendor/jquery.history-1.7.1.min.js', type: 'text/javascript'}
    %script{src: '/js/arnunestattoos.com.js', type: 'text/javascript'}
    = yield_content :js
